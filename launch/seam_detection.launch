<launch>

  <!-- This is the main launch file for the SEAM_DETECTION node and package -->

  <env name="LIBGL_ALWAYS_SOFTWARE" value="1"/>

  <!-- read value of arg -->
  <param name="param" value="$(arg lidar_file)"/>
  <param name="param" value="$(arg cad_file)"/>
  <param name="param" value="$(arg part1_type)"/>

  <node
    pkg="seam_detection"
    name="seam_detection_tf"
    type="seam_detection_tf"
    output="screen"
  />

  <node
    pkg="pcl_ros"
    name="pcd_to_pointcloud"
    type="pcd_to_pointcloud"
    output="screen"
    args="$(find seam_detection)/pcd_images/$(arg lidar_file)">
  </node>

  <node name="rviz"
        pkg="rviz"
        type="rviz"
        args="-d $(find seam_detection)/rviz/seam_detection.rviz">
  </node>

  <!-- this node contains primary processing of lidar data for seam detection -->
  <node
    pkg="seam_detection"
    name="seam_detection"
    type="seam_detection"
    output="screen"
    args="-f $(find seam_detection)/pcd_images/$(arg lidar_file) $(find seam_detection)/pcd_images/$(arg cad_file) $(arg part1_type)"
  />

  <!-- <include file="$(find seam_detection)/config/import_seam.yaml" /> -->
  <!-- this node imports data about the seam and the welding scene - also I am testing some things here -->
  <!--
  <node
    pkg="seam_detection"
    name="import_seam"
    type="import_seam"
    output="screen"
    args="$(find seam_detection)/pcd_images/$(arg cad_file) $(find seam_detection)/pcd_images/$(arg seam_file)"
  />
  -->

</launch>
