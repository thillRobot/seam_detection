<launch>

  <!-- --> 

  <env name="LIBGL_ALWAYS_SOFTWARE" value="1"/>

  <!-- read value of arg -->
  <param name="param" value="$(arg in_file)"/>

  <node                     
    pkg="scan2cloud"          
    name="setup_tf"   
    type="setup_tf"
    output="screen"    
  />                        
  
  <node                     
    pkg="pcl_ros"          
    name="pcd_to_pointcloud"   
    type="pcd_to_pointcloud"
    output="screen"
    args="$(find seam_detection)/images/$(arg in_file)">   
  </node>	 
  
  <node name="rviz" 
        pkg="rviz" 
        type="rviz" 
        args="-d $(find seam_detection)/rviz/seam_detection.rviz">
  </node>

  <node                     
    pkg="seam_detection"          
    name="ransac_plane"   
    type="ransac_plane"
    output="screen"
    args="-f $(arg in_file)"    
  />

</launch>
