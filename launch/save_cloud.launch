<launch>

  <env name="LIBGL_ALWAYS_SOFTWARE" value="1"/>

  <!-- read value of arg -->
  <param name="param" value="$(arg config)"/> 
  
  <rosparam file="$(find seam_detection)/config/$(arg config).yaml" />
                    
  <node name="rviz" 
    pkg="rviz" 
    type="rviz" 
    args="-d $(find seam_detection)/rviz/save_cloud.rviz">
  </node>

  <node                     
    pkg="seam_detection"          
    name="save_cloud"   
    type="save_cloud"
    output="screen"  
   />
   
</launch>
