<launch>

  <!-- --> 

  <env name="LIBGL_ALWAYS_SOFTWARE" value="1"/>

  <!-- read value of args -->
  <param name="param" value="$(arg in_file)"/>
  <param name="param" value="$(arg out_file)"/>

  <node                     
    pkg="scan2cloud"          
    name="setup_tf"   
    type="setup_tf"
    output="screen"    
  />                        
  
  <node name="rviz" 
        pkg="rviz" 
        type="rviz" 
        args="-d $(find seam_detection)/filter_cloud.rviz">
  </node>

  <node                     
    pkg="seam_detection"          
    name="filter_cloud"   
    type="filter_cloud"
    output="screen"
    args="$(arg in_file) $(arg out_file)"    
  />

</launch>
